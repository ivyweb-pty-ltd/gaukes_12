        <template id="assets_backend_crm_attooh" inherit_id="web.assets_backend">
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/crm_attooh/static/src/js/crm_sign.js"></script>
            </xpath>
            <!-- <xpath expr="link[last()]" position="after"> <link rel="stylesheet"
                href="/website_sign/static/src/less/website_sign_backend.less"/> </xpath> -->
        </template>
        <template id="assets_common" inherit_id="web.assets_common">
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/crm_attooh/static/src/js/website_sign_override.js"></script>
            </xpath>
        </template>
        
        <record id="signature_request_items" model="ir.ui.view">
            <field name="name">sign.request.item.form</field>
            <field name="model">sign.request.item</field>
            <field name="inherit_id" ref="sign.sign_request_item_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='longitude']" position="after">
                    <field name="ip_address"/>
                    <field name="time_zone"/>
                    <field name="region"/>
                    <field name="country_name"/>
                    <field name="country_code"/>
                    <field name="city"/>
                </xpath>
            </field>
        </record>

        <record id="action_service_type" model="ir.actions.act_window">
            <field name="name">Service Type</field>
            <field name="res_model">crm.service.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_service_type_activity" model="ir.actions.act_window">
             <field name="name">Service Type Activity</field>
             <field name="res_model">crm.service.type.activity</field>
             <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Supplied Services" id="crm.services_menu" parent="crm.crm_menu_config"/>
        <menuitem name="Service Type" id="crm.service_type_menu" parent="crm.services_menu"
                action="action_service_type"/>
        <menuitem name="Service Type Activities" id="crm.service_type_activities_menu" parent="crm.services_menu"
