<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit view of Lead Form : adding the "Attooh service tags" -->
        <record id="crm_lead_view_form_service_opp" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
            <field name="arch" type="xml">
                <button name="%(crm.crm_lead_lost_action)d" position="after">
                    <button name="sms_action" string="Send SMS" type="object"
                            help="Send SMS" class="oe_highlight" attrs="{'invisible': [('sms_on_opportunity', '=', False)]}"/>
                </button>
                <field name="stage_id" widget="statusbar" clickable="True"
                    options="{'fold_field': 'fold'}" domain="['|', ('team_id', '=', team_id), ('team_id', '=', False)]"
                    attrs="{'invisible': [('active', '=', False)]}" />

                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="service_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    <field name="sms_on_opportunity" invisible="1"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="open_lead_signature" class="oe_stat_button"
                        icon="fa-file-text" type="object">
                        <field string="Signature Requests" name="signature_requests_count"
                            widget="statinfo" />
                    </button>
                </xpath>
                <xpath expr="//notebook/page[1]" position='replace'>
                </xpath>
                <xpath expr="//notebook/page[@name='lead']" position="after">
                    <page string="Signature Request">
                        <field name="signature_ids" />
                    </page>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Production Book">
                        <group>
                            <group>
                                <field name="contract_policy_number" />
                                <field name="submission_date" />
                                <field name="date_of_issue"/>
                                <field name="doc"/>
                                <field name="compliance_mail"/>
                                <field name="product_provider_id"/>
                                <field name="product_id"/>
                                <field name="premium"/>
                                <field name="vitality"/>
                                <field name="fica"/>
                            </group>
                            <group>
                                <field name="commission_year_1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="commission_year_2" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="monthly_commission" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="issued_commission_year_1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="issued_commission_year_2" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="issued_monthly_commission" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <field name="book_notes" placeholder="Production Book Notes"/>
                        </group>
                    </page>
                    <page string="Process">
                        <field name="service_activity_ids"/>
                    </page>
                </xpath>
                <field name="team_id" position="replace"/>
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" domain="[('is_financial_advisor','=',1)]"/>
                    <field name="responsible_id"/>
                    <field name="product_area_id" widget="selection"/>
                </xpath>
                <xpath expr="//page[@name='lead']//field[@name='source_id']" position="after">
                    <field name="team_id"/>
                </xpath>
                <xpath expr="//field[@name='mobile']" position="replace">
                </xpath>
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="mobile" />
                </xpath>
                <xpath expr="//field[@name='source_id']" position="after">
                    <field name="referred" />
                </xpath>
            </field>
        </record>

        <record id="crm_case_opp_filter_attooh" model="ir.ui.view">
            <field name="name">crm.lead.search Attooh</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
            <field name="arch" type="xml">
                <filter name="assigned_to_me" position="replace">
                    <filter string="My Pipeline" name="assigned_to_me"
                            domain="[('responsible_id', '=', uid)]"
                            help="Opportunities that are assigned to me"/>
                </filter>
            </field>
        </record>


        <record id="crm_lead_view_form_service_lead" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <button name="%(crm.action_crm_lead2opportunity_partner)d" position="after">
                    <button name="sms_action" string="Send SMS" type="object"
                            help="Send SMS" class="oe_highlight" attrs="{'invisible': [('sms_on_lead', '=', False)]}"/>
                </button>
                <xpath expr="//field[@name='mobile']" position="after">
                    <field name="service_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    <field name="sms_on_lead" invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='categorization']" position="attributes">
                    <attribute name="groups"></attribute>
                    <!-- <field name="service_ids" widget="many2many_tags" options="{'no_create_edit': True}" /> -->
                </xpath>
                <field name="user_id" position="replace">
                    <field name="user_id" domain="[('is_financial_advisor','=',1)]"/>
                </field>
            </field>
        </record>

        <record id="crm_lead_service_activity_list" model="ir.ui.view">
            <field name="name">crm.service.activity</field>
            <field name="model">crm.service.activity</field>
            <field name="arch" type="xml">
                <tree limit="10" default_order="completed,sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="mail_activity_id"/>
                    <field name="completed"/>
                </tree>
            </field>
        </record>

        <record id="crm_service_type_activity_tree" model="ir.ui.view">
            <field name="name">crm.service.type.activity List</field>
            <field name="model">crm.service.type.activity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="stage_id"/>
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="employee_role_id"/>
                    <field name="lead_time" widget="float_time"/>
                    <field name="time_allocation" widget="float_time"/>
                    <field name="activity_type_id"/>
                    <field name="service_type_id"/>
                    <field name="document_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="crm_service_type_activity_form" model="ir.ui.view">
            <field name="name">crm.service.type.activity Form</field>
            <field name="model">crm.service.type.activity</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="stage_id"/>
                        <field name="reference"/>
                        <field name="name"/>
                        <field name="employee_role_id"/>
                        <field name="lead_time" widget="float_time"/>
                        <field name="time_allocation" widget="float_time"/>
                        <field name="activity_type_id"/>

                        <field name="service_type_id"/>
                        <field name="document_ids"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>

            <record id="crm_service_type_activity_search" model="ir.ui.view">
            <field name="name">crm.service.type.activity Search</field>
            <field name="model">crm.service.type.activity</field>
            <field name="arch" type="xml">
                <search>
                    <field name="stage_id"/>
 <!--                   <field name="reference"/>
                    <field name="employee_role_id"/>
                    <field name="service_type_id"/>
                    <filter string="Stage" context="{'group_by':'stage_id'}"/>
                    <filter string="Service Type" context="{'group_by':'service_type_id'}"/>
                    <filter string="Responsible" context="{'group_by':'employee_role_id'}"/> -->
                </search>
            </field>
        </record>

        <record id="crm_service_type_list" model="ir.ui.view">
            <field name="name">crm.service.type List</field>
            <field name="model">crm.service.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="service_type_activity_ids"/>
                </tree>
            </field>
        </record>

        <record id="crm_service_type_form" model="ir.ui.view">
            <field name="name">crm.service.type Form</field>
            <field name="model">crm.service.type</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="service_type_activity_ids"/>
                    </group>
                </form>
            </field>
        </record>


